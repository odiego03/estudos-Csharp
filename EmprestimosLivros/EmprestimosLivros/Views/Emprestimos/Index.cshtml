
@model IEnumerable<EmprestimosModel>


    <div class="container"></div>
        <div class="d-flex justify-content-between align-content-center mb-5">
         <h1>Emprestimos</h1>
    <a class="btn btn-success mx-2" asp-controller="Emprestimos" asp-action="Cadastrar"> <i class="bi bi-file-earmark-plus mx-2"> Cadastrar novo emprestimo</i></a>
        </div>



@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}





<table id="Emprestimos" class="table table-light table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Recebedor"</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livro</th>
            <th scope="col">Ultima Atualizaçao</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach(var emprestimo in Model)
            {
                <tr>
                    <th scope="row">@emprestimo.Recebedor</th>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.LivroEmprestado</td>
                    <td>@emprestimo.DataUltimaAtualzacao</td>
                    <td>
                        <a asp-controlller="Emprestimos" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2"> <i class="bi bi-pencil-square mx-2"> Editar</i> </a>
                        <a asp-controlller="Emprestimos" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill mx-2"> Excluir</i></a>
                    </td>
                </tr>
            }
            
        }
    </tbody>
</table>
</div>